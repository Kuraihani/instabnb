{% extends 'base.html.twig' %}
{% block title %}Hello Exercice2Controller!{% endblock %}


{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>



    <div class="example-wrapper">
        {{ include('exercice2/product/header.html.twig') }}

        <h1>Hello {{ controller_name }}! ✅</h1>
        {#{{ dump(languages) }}#}
        {% set tableau = ['1', 2, 'defezz'] %}
        {#{{ dump(tableau) }}#}
        {% set alphabet = range('a', 'z') %}
        {#{{ dump(alphabet) }}#}
        {{ 'Le nombre aléatoire est: '~random(tableau) }}
        <ul>
            {% for language in languages %}
                <li>{{ language.language }}{{ "=>" }}{{ language.version }}</li>
            {% endfor %}
        </ul>

        {% for i in alphabet %}
            {{ i|upper }}
        {% endfor %}
        <br/>

        {{ "Jour:"~date_ajd|date('d') }}<br/>
        {{ "Mois:"~date_ajd|date('m') }}<br/>
        {{ "Annee:"~date_ajd|date('y') }}<br/>

        <ul>
            <li>
                {{ include('exercice2/product/product-details.html.twig') }}
            </li>
        </ul>




        This friendly message is coming from:
        <ul>
            <li>Your controller at <code><a
                            href="{{ 'C:/wamp64/www/TP_Routing/src/Controller/Exercice2Controller.php'|file_link(0) }}">src/Controller/Exercice2Controller.php</a></code>
            </li>
            <li>Your template at <code><a
                            href="{{ 'C:/wamp64/www/TP_Routing/templates/exercice2/index.html.twig'|file_link(0) }}">templates/exercice2/index.html.twig</a></code>
            </li>
        </ul>
    </div>
{% endblock %}
